@model Chatbot.Models.LoginModel

@{
    ViewBag.Title = "Medical Chatbot | Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-box login-sidebar">
    <div class="white-box">

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal form-material", @id = "my-form", data_toggle = "validator" }))
        {
            <a href="javascript:void(0)" class="text-center db"><img src="~/images/logo.png" alt="Home" width="70" /><br /><img src="~/images/logo-text.png" alt="Home" width="200" /></a>

            @*<h1 class="text-center">Login</h1>*@
            @*<a href="javascript:void(0)" class="text-center db"><img src="~/images/logo-mini.png" alt="Home" width="70" /><br /><img src="~/images/logo-text.png" alt="Home" width="200" /></a>*@

            <div class="form-group m-t-40">
                <div class="col-xs-12">
                    @Html.TextBoxFor(u => u.Username, new { @class = "form-control", @placeholder = "Username", @required = "required" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    @Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "Password", @required = "required" })
                </div>
            </div>
            <div style="color:red">
                @Html.ValidationSummary()
            </div>
            <div class="form-group text-center m-t-20">
                <div class="col-xs-12">
                    <button id="submit-btn" class="mr-b-20 btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                    <a href="../Home/Signup">Signup</a>
                </div>
            </div>
        }
    </div>
</div>