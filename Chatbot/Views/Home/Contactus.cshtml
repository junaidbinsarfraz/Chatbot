@{
    ViewBag.Title = "Medical Chatbot | Contactus Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-push-3">
        <div class="form-horizontal form-material">

            @using (Html.BeginForm("Contactus", "Home", FormMethod.Post, new { @class = "form-horizontal form-material", @id = "my-form", data_toggle = "validator" }))
            {
                @*<a href="javascript:void(0)" class="text-center db"><img src="~/images/logo.png" alt="Home" width="70" /><br /><img src="~/images/logo-text.png" alt="Home" width="200" /></a>*@

                @*<h1 class="text-center">Login</h1>*@
                @*<a href="javascript:void(0)" class="text-center db"><img src="~/images/logo-mini.png" alt="Home" width="70" /><br /><img src="~/images/logo-text.png" alt="Home" width="200" /></a>*@

                <div style="color:green; margin-bottom: 0.5em;">
                    @Html.ValidationMessage("Success")
                </div>

                <div class="form-group m-t-40">
                    <div class="col-xs-12">
                        @Html.TextBox("name", null, new { @class = "form-control", @placeholder = "Name", @required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.TextBox("email", null, new { @class = "form-control", @placeholder = "Email", @required = "required", @type = "email" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.TextArea("message", null, new { @class = "form-control", @placeholder = "Message", @required = "required" })
                    </div>
                </div>
                <div style="color:red; margin-top: 0.5em;">
                    @Html.ValidationMessage("Fail")
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button id="submit-btn" class="mr-b-20 btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Send</button>
                        @*<a href="../Home/Signup">Signup</a>*@
                    </div>
                </div>
            }

        </div>
    </div>
</div>